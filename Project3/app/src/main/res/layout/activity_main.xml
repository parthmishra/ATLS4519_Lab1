<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.parthmishra.project3.MainActivity" >



    <TextView
        android:layout_width="269dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:paddingTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:hint="@string/enter_summoner"
        android:background="#303030"
        android:inputType="textNoSuggestions"
        android:textCursorDrawable="@null"
        android:textColorHint="#7b7b7b"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_below="@+id/titleView"
        android:layout_alignRight="@+id/titleView"
        android:layout_alignEnd="@+id/titleView"
        android:layout_alignLeft="@+id/titleView"
        android:layout_alignStart="@+id/titleView"
        android:id="@+id/editText" />
    
    <Spinner
        android:id="@+id/regions_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#303030"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="81dp"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:text="@string/submit_button_text"
        android:textColor="@color/orange"
        android:background="@drawable/main_button"
        android:textSize="35dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/regions_spinner"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
